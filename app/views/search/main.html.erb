<div class="row" style="margin:50px 0 50px 0">
  <div class="col-md-4 col-md-offset-4">

    <%= form_tag("/main", method: "post") do %>
      <%= label_tag(:keyword, "Enter Keywords") %><br />
      <%= text_field_tag(:keyword, nil, placeholder: "E.g. concert") %><br />
      <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    Results <br/>
    <% if @stuff.present? %>
      <% @stuff.each do |tweet| %>
        <%= tweet.user.screen_name %> - <%= tweet.user.name%> <br/>
        <%=tweet.text%> <br/>
      <%end%>
    <%end%>
  </div>
</div>
